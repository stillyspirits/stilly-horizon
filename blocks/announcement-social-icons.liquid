{% liquid
  # Check if any social handles are configured
  assign has_social = false
  if settings.social_facebook != blank or settings.social_instagram != blank or settings.social_twitter != blank or settings.social_tiktok != blank or settings.social_youtube != blank or settings.social_linkedin != blank or settings.social_pinterest != blank
    assign has_social = true
  endif
%}

{% if has_social %}
  <div
    class="announcement-social-icons"
    {{ block.shopify_attributes }}
  >
    {% if settings.social_facebook != blank %}
      {% render 'social-icon', 
        platform: 'facebook', 
        handle: settings.social_facebook,
        size: 'sm'
      %}
    {% endif %}
    
    {% if settings.social_instagram != blank %}
      {% render 'social-icon', 
        platform: 'instagram', 
        handle: settings.social_instagram,
        size: 'sm'
      %}
    {% endif %}
    
    {% if settings.social_twitter != blank %}
      {% render 'social-icon', 
        platform: 'twitter', 
        handle: settings.social_twitter,
        size: 'sm'
      %}
    {% endif %}
    
    {% if settings.social_tiktok != blank %}
      {% render 'social-icon', 
        platform: 'tiktok', 
        handle: settings.social_tiktok,
        size: 'sm'
      %}
    {% endif %}
    
    {% if settings.social_youtube != blank %}
      {% render 'social-icon', 
        platform: 'youtube', 
        handle: settings.social_youtube,
        size: 'sm'
      %}
    {% endif %}
    
    {% if settings.social_linkedin != blank %}
      {% render 'social-icon', 
        platform: 'linkedin', 
        handle: settings.social_linkedin,
        size: 'sm'
      %}
    {% endif %}
    
    {% if settings.social_pinterest != blank %}
      {% render 'social-icon', 
        platform: 'pinterest', 
        handle: settings.social_pinterest,
        size: 'sm'
      %}
    {% endif %}
  </div>
{% endif %}

{% stylesheet %}
  .announcement-social-icons {
    display: flex;
    align-items: center;
    gap: var(--gap-xs);
    padding-inline: var(--gap-md);
    color: var(--color-foreground);
  }
  
  .announcement-social-icons .social-icon-link {
    color: inherit;
  }
{% endstylesheet %}

{% schema %}
{
  "name": "Social icons",
  "tag": null,
  "settings": []
}
{% endschema %}