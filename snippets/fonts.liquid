{%- comment -%}
  Preload custom Interstate fonts
{%- endcomment -%}
<link
  rel="preload"
  as="font"
  href="{{ 'font-interstate_condensed_regular.woff2' | asset_url }}"
  type="font/woff2"
  crossorigin
>
<link
  rel="preload"
  as="font"
  href="{{ 'font-interstate_condensed_bold.woff2' | asset_url }}"
  type="font/woff2"
  crossorigin
>
<link
  rel="preload"
  as="font"
  href="{{ 'font-interstate_bold_condensed_regular.woff2' | asset_url }}"
  type="font/woff2"
  crossorigin
>

{%- unless settings.type_body_font.system?
  and settings.type_subheading_font.system?
  and settings.type_heading_font.system?
-%}
  <link
    rel="preconnect"
    href="https://fonts.shopifycdn.com"
    crossorigin
  >
{%- endunless -%}

{% # theme-check-disable %}
{%- unless settings.type_body_font.system? -%}
  <link
    rel="preload"
    as="font"
    href="{{ settings.type_body_font | font_url }}"
    type="font/woff2"
    crossorigin
  >
{%- endunless -%}
{%- unless settings.type_subheading_font.system? -%}
  <link
    rel="preload"
    as="font"
    href="{{ settings.type_subheading_font | font_url }}"
    type="font/woff2"
    crossorigin
  >
{%- endunless -%}
{%- unless settings.type_heading_font.system? -%}
  <link
    rel="preload"
    as="font"
    href="{{ settings.type_heading_font | font_url }}"
    type="font/woff2"
    crossorigin
  >
{%- endunless -%}
{%- unless settings.type_accent_font.system? -%}
  <link
    rel="preload"
    as="font"
    href="{{ settings.type_accent_font | font_url }}"
    type="font/woff2"
    crossorigin
  >
{%- endunless -%}
{% # theme-check-enable %}


