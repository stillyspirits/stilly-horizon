<div class="section color-{{ section.settings.color_scheme }}">
  <div class="container">
    <div style="padding: 60px 20px; text-align: center;">
      
      {%- if section.settings.heading != blank -%}
        <h1 class="h1{% if section.settings.heading_gradient %} gradient-text{% endif %}">
          {{ section.settings.heading }}
        </h1>
      {%- endif -%}
      
      {%- if section.settings.subheading != blank -%}
        <h2 class="h3{% if section.settings.subheading_gradient %} gradient-text{% endif %}" style="margin-top: 20px;">
          {{ section.settings.subheading }}
        </h2>
      {%- endif -%}
      
      {%- if section.settings.description != blank -%}
        <div class="rte{% if section.settings.description_gradient %} gradient-text{% endif %}" style="margin-top: 20px; font-size: 1.2em;">
          {{ section.settings.description }}
        </div>
      {%- endif -%}
      
      {%- if section.settings.button_text != blank -%}
        <a href="{{ section.settings.button_link }}" 
           class="button button--primary{% if section.settings.button_gradient %} gradient-text{% endif %}" 
           style="margin-top: 30px; display: inline-block;">
          {{ section.settings.button_text }}
        </a>
      {%- endif -%}
      
    </div>
  </div>
</div>

{% schema %}
{
  "name": "Gradient Text Demo",
  "settings": [
    {
      "type": "color_scheme",
      "id": "color_scheme",
      "label": "Color scheme",
      "default": "scheme-7"
    },
    {
      "type": "header",
      "content": "Heading"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Stunning Gradient Text"
    },
    {
      "type": "checkbox",
      "id": "heading_gradient",
      "label": "Apply gradient to heading",
      "default": true
    },
    {
      "type": "header",
      "content": "Subheading"
    },
    {
      "type": "text",
      "id": "subheading",
      "label": "Subheading",
      "default": "Create eye-catching typography with animated gradients"
    },
    {
      "type": "checkbox",
      "id": "subheading_gradient",
      "label": "Apply gradient to subheading",
      "default": true
    },
    {
      "type": "header",
      "content": "Description"
    },
    {
      "type": "richtext",
      "id": "description",
      "label": "Description",
      "default": "<p>Transform your text into vibrant, animated gradients that capture attention and add visual interest to your content.</p>"
    },
    {
      "type": "checkbox",
      "id": "description_gradient",
      "label": "Apply gradient to description",
      "default": false
    },
    {
      "type": "header",
      "content": "Button"
    },
    {
      "type": "text",
      "id": "button_text",
      "label": "Button text",
      "default": "Gradient Button"
    },
    {
      "type": "url",
      "id": "button_link",
      "label": "Button link"
    },
    {
      "type": "checkbox",
      "id": "button_gradient",
      "label": "Apply gradient to button text",
      "default": false
    }
  ],
  "presets": [
    {
      "name": "Gradient Text Demo"
    }
  ]
}
{% endschema %}